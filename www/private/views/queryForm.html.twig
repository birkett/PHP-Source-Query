<h1>Server Query Tool</h1>

<form action="/" method="POST">
    <label for="hostname">Hostname</label>
    <input type="text" id="hostname" name="hostname" value="{{ formData.hostname }}" class="input-sm" />

    <label for="port">Port</label>
    <input type="number" id="port" name="port" value="{{ formData.port }}" class="input-sm" />

    <label for="engine">Engine</label>
    <select id="engine" name="engine" class="input-sm">
        {% for engine in engines %}
            <option value="{{ engine }}" {{ engine == formData.engine ? 'selected' : '' }}>{{ engine }}</option>
        {% endfor %}
    </select>

    <button type="submit" class="btn btn-large btn-primary">Query</button>
</form>
